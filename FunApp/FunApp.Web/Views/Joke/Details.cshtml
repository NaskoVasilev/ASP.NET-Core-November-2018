@model JokeViewModel
@{
    ViewData["Title"] = "View";
}

<h2 class="text-center">Joke Details</h2>
<div class="col-md-12 clearfix">
    <div class="panel panel-default">
        <div class="panel-body">
            @Html.Raw(Model.HtmlContent)
        </div>
        <div class="panel-footer">
            @Model.CategoryName
            
        </div>
        <div class="panel-footer" id="joke-rating">
            @Model.Rating
        </div>
        <div class="panel-footer">
            <input type="number" id="rating" name="rating" min="1" max="6" />
            <span class="text-danger"></span>
            <input class="btn btn-primary" id="rate-btn" data-id="@Model.Id" type="submit" value="Rate" />
        </div>
    </div>
</div>

@section Scripts{
<script src="~/js/rating.js"></script>
}

