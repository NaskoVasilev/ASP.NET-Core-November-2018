@using X.PagedList.Mvc.Core;
@using X.PagedList;

@model IEnumerable<Eventures.ViewModels.Order.OrderViewModel>
@{
    ViewData["Title"] = "All Orders";
}
<h1 class="text-center">All Orders</h1>
<hr class="chushka-bg-color w-75 hr-2" />
<div class="container d-flex justify-content-center w-75">
    <table class="table table-hover">
        <thead>
            <tr class="row">
                <th class="col-md-1">#</th>
                <th class="col-md-4">Event</th>
                <th class="col-md-3">Customer</th>
                <th class="col-md-4">Ordered On</th>
            </tr>
        </thead>
        <tbody>
            @{
                int index = 1;
            }
            @foreach (var currentEvent in Model)
            {
                <tr class="row">
                    <th class="col-md-1">@(index++)</th>
                    <td class="col-md-4">@currentEvent.Event</td>
                    <td class="col-md-3">@currentEvent.Customer</td>
                    <td class="col-md-4">@currentEvent.OrderedOn</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<hr class="chushka-bg-color w-75 hr-2" />
<div class="pagination">
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("All", new { page }))
</div>
