@model LoginViewModel
@{
    ViewData["Title"] = "View";
}

<h1 class="text-center">Login</h1>
<hr class="chushka-bg-color w-50 hr-2" />
<form asp-controller="Account" asp-action="Login" asp-route-returnurl=@ViewData["returnUrl"] class="mx-auto half-width" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" placeholder="Username...">
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" placeholder="Password...">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn chushka-bg-color">Login</button>
    </div>
</form>
<div>
    <div class="text-center my-2">
        <a asp-controller="Account" asp-action="ForgotPassword" class="text-info">Forgot your password?</a>
    </div>
    <div class="text-center mb-2">
        <a asp-controller="Account" asp-action="Register" class="text-info">Register as a new user</a>
    </div>
</div>

<hr class="chushka-bg-color w-50 hr-2" />

    <form asp-area="Identity" asp-page="/Account/ExternalLogin" asp-route-returnUrl="@ViewData["returnUrl"]" method="post" class="mx-auto w-50 text-center font-weight-bold">
        <div>
            <p>
                @foreach (var provider in Model.ExternalLogins)
                {
                    <button type="submit" class="btn chushka-bg-color" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                }
            </p>
        </div>
    </form>

    <hr class="chushka-bg-color w-50 hr-2" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

