@model EventViewModel
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create Event</h1>
<hr class="hr-2 bg-dark" />
<form class="mx-auto half-width post-form" method="post" asp-controller="Event" asp-action="Create">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Name...">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Place"></label>
        <input asp-for="Place" class="form-control" placeholder="Place...">
        <span asp-validation-for="Place" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Start"></label>
        <input asp-for="Start" class="form-control" placeholder="Start...">
        <span asp-validation-for="Start" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="End"></label>
        <input asp-for="End" class="form-control" placeholder="End...">
        <span asp-validation-for="End" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TotalTickets"></label>
        <input asp-for="TotalTickets" class="form-control" placeholder="Total tickets...">
        <span asp-validation-for="TotalTickets" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PricePerTicket"></label>
        <input asp-for="PricePerTicket" class="form-control" placeholder="Price per ticket...">
        <span asp-validation-for="PricePerTicket" class="text-danger"></span>
    </div>
    <hr class="hr-2 bg-dark half-width mt-4" />
    <div class="button-holder mt-2 d-flex justify-content-center">
        <button type="submit" class="btn chushka-bg-color">Create</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

