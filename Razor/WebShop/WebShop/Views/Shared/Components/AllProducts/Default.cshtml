@model ProductViewModel[]

@{
    int index = 0;

    <div class="container-fluid product-holder">
        @for (int i = 0; i < Model.Length / 5 + 1; i++)
        {
            <div class="row d-flex justify-content-around">
                @for (int j = 0; j < 5; j++)
                {
                    if (index >= Model.Length)
                    {
                        break;
                    }

                    <div class="product col-md-2 chushka-bg-color rounded-top rounded-bottom">
                        <a href="/Product/Details/@Model[index].Id">
                            <h5 class="text-center mt-3">@Model[index].Name</h5>
                        </a>
                        <hr class="hr-1 bg-white" />
                        <p class="text-white text-center">
                            @if (Model[index].Description != null)
                            {
                                @(Model[index].Description.Substring(0, Math.Min(Model[index].Description.Length, 50)) + "...")
                            }
                        </p>
                        <hr class="hr-1 bg-white" />
                        <h6 class="text-center text-white mb-3"> @Model[index].Price</h6>
                    </div>

                    index++;
                }
            </div>
        }
    </div>
}
