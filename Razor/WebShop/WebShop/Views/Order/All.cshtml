@model WebShop.ViewModels.Order.OrderViewModel[]

@{
    ViewData["Title"] = "Orders";
}

<h1 class="text-center">All Orders</h1>
<hr class="hr-2 bg-dark" />
<table class="table w-75 mx-auto table-hover">
    <thead>
        <tr class="row">
            <th class="col-md-1">#</th>
            <th class="col-md-4">Order ID</th>
            <th class="col-md-2">Customer</th>
            <th class="col-md-2">Product</th>
            <th class="col-md-2">Ordered On</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Length; i++)
        {
            <tr class="row">
                <th class="col-md-1">@i</th>
                <td class="col-md-4">@Model[i].Id</td>
                <td class="col-md-2">@Model[i].Customer</td>
                <td class="col-md-2">@Model[i].Product</td>
                <td class="col-md-2">@Model[i].OrderedOn</td>
            </tr>
        }
    </tbody>
</table>